---
import BaseHead from "../components/BaseHead.astro";
import SkipMain from "../components/buttons/SkipMain.astro";
import FooterMain from "../components/FooterMain.astro";
import GetInTouch from "../components/GetInTouch.astro";
import NavMain from "../components/NavMain.astro";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
            title= "Los Alamos Landscaping | Thank You"
            description= "Thank you for requesting an estimate from Los Alamos Landscaping & More. Our team will review your details and get back to you as soon as possible. In the meantime, feel free to explore our landscaping services, including landscape design, hardscaping, irrigation, and more."
            keywords="landscaping, landscaping services, landscaping company, landscaping design, landscaping maintenance"
            url="https://losalamoslandscaping.com/thankyou-estimate"
        />
    </head>
    <body>
		<SkipMain />
        <header>
            <NavMain />
        </header>
        <main id="main">
            <section class="hero">
                <div class="padding-hero">
                    <div class="container">
                        <div class="wrapper-center">
                            <h2 class="title-page text-center">Thank You for <br><span class="text-red">Your Request</span></h2>
                            <p class="body-txt text-center">Thank you for requesting an estimate from Los Alamos Landscaping & More. Our team will review your details and get back to you as soon as possible. In the meantime, feel free to explore our landscaping services, including landscape design, hardscaping, irrigation, and more.</p>
                            <div class="btn-wrapper">
                                <a href="/" class="btn-primary">Back to Home</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section-relative">
                <div class="padding-global">
                    <div class="container">
                        <div class="wrapper-col">
                            <GetInTouch />
                            <div class="wrapper">
								<img src="/images/static/lalam-building.webp" alt="Exterior of a landscaped commercial building with decorative plants, stone accents, and a patio area in Los Alamos." class="img" loading="lazy" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="deco-bottom-short"></div>
            </section>
        </main>
        <FooterMain />
    </body>
</html>