---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import NavMain from "../../components/NavMain.astro";
import TestimonialGrid from "../../components/TestimonialGrid.astro";
import GetInTouch from "../../components/GetInTouch.astro";
import FooterMain from "../../components/FooterMain.astro";
import ServiceGrid from "../../components/ServiceGrid.astro";

export const getStaticPaths = async () => {
    const serviceEntries = await getCollection('projects');
    return serviceEntries.map((project: CollectionEntry<'projects'>) => ({
        params: { slug: project.slug }, 
        props: project.data,
    }));
};

interface GalleryItem {
    image: string;
    alt: string;
}

interface ProjectProps {
    title: string;
    description: string;
    image: string;
    mainAlt: string;
    imageTwo: string;
    altTwo: string;
    about: string;
    gallery?: GalleryItem[];
    articleLink: string;
    slug: string;
}

const { title, description, image, imageTwo, mainAlt, altTwo, about, gallery, articleLink, slug } = Astro.props as ProjectProps;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
            title={`Los Alamos Landscaping Services | ${title}`}
            description={description}
            keywords="landscaping, landscaping services, landscaping company, landscaping design, landscaping maintenance"
            url={`https://losalamoslandscaping.com/services/${slug}`}
        />
    </head>
    <NavMain />
    <body>
        <section class="hero">
            <div class="padding-hero">
                <div class="container">
                    <div class="wrapper-col">
                        <div class="wrapper hero-center">
                            <p class="title-sm text-red">Los Alamos Landscaping Projects</p>
                            <h1 class="title-page">{title}</h1>
                            <p class="body-txt">{description}</p>
                            <div class="btn-wrapper">
                                <a href="/estimate" class="btn-primary">Get an Estimate Today</a>
                            </div>
                        </div>
                        <div class="wrapper">
                            <img src={image} alt={mainAlt} class="img-hero" loading="eager"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="deco-bottom"></div>
        </section>
        <section class="section-relative">
            <div class="padding-global">
                <div class="container">
                    <div class="wrapper-col">
                        <div class="wrapper">
                            <img src={imageTwo} alt={altTwo} class="img" loading="lazy" />
                        </div>
                        <div class="wrapper">
                            <h2 class="title-section">Brining Expertise <br class="mobile-hide"><span class="text-red">To Every Project</span></h2>
                            <div class="body-wrapper">
                                <p class="body-txt">{about}</p>
                            </div>
                            <div class="btn-wrapper">
                                <a href="/estimate" class="btn-primary">
                                  Get an Estimate
                                </a>
                                {articleLink && (
                                  <a href={articleLink} class="btn-secondary" target="_blank" rel="noopener noreferrer">
                                    Read The Article
                                  </a>
                                )}
                              </div>
                        </div>
                    </div>
                </div>
            </div>
            <img class="leaf-1" src="/images/assets/leaf-small_1.svg" alt="" role="presentation" loading="lazy"/>
        </section>
        {gallery && gallery.length > 0 && (
            <section class="section-relative">
                <div class="padding-global">
                    <div class="container">
                        <h2 class="title-section text-underline">Project Gallery</h2>
                        <div class="gallery-grid">
                            {gallery.map((item, index) => (
                                <div class="gallery-item">
                                    <img
                                        src={item.image}
                                        alt={item.alt || `Image ${index + 1}`}
                                        class="img"
                                        loading="lazy"
                                    />
                                </div>
                            ))}
                        </div> 
                    </div>  
                </div>
            </section>
          )}
          <section class="section-relative">
            <div class="padding-global">
                <div class="container">
                    <h2 class="title-section text-underline">Our Services</h2>
                    <ServiceGrid />
                </div>
            </div>
            <img class="leaf-2" src="/images/assets/leaf-small_2.svg" alt="" role="presentation" loading="lazy"/>
        </section>
        <section class="section-dark">
            <div class="padding-global">
                <div class="container">
                    <div class="wrapper-center">
                        <h2 class="title-section text-center text-underline-center">What Our Customers Say</h2>
                    </div>
                    <TestimonialGrid />
                </div>
            </div>
        </section>
        <section class="section-relative">
            <div class="padding-large-top">
                <div class="container">
                    <div class="wrapper-center">
                        <h2 class="title-section text-center">Ready To Get Started <br class="mobile-hide" class="mobile-hide"><span class="text-red">On Your Project?</span></h2>
                        <div class="btn-wrapper center">
                            <a href="/estimate" class="btn-primary">Get an Estimate</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="section-relative">
            <div class="padding-short-bottom">
                <div class="container">
                    <div class="wrapper-col">
                        <GetInTouch />
                        <div class="wrapper">
                            <img src="/images/static/2017+baskets.webp" alt="Los Alamos Landscaping team arranging vibrant hanging flower baskets in a sunny parking lot, surrounded by trucks and lush trees in the background." class="img" loading="lazy" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="deco-bottom-short"></div>
        </section>
    </main>
    <FooterMain />
</body>
</html>