---
export interface PortfolioProps {
    title: string;
    image: string;
    link: string;
    mainAlt: string;
}

const { title, image, link, mainAlt } = Astro.props as PortfolioProps;
---
<li>
    <a href={link}  class="portfolio-card">
        <img src={image} alt={mainAlt} class="portfolio-card-img" loading="lazy" />
        <div class="portfolio-card-link">
            <h3 class="portfolio-card-title">{title}</h3>
            <img src="/images/icons/icon_arrow-right.svg" alt="" role="presentation" class="portfolio-card-arrow" loading="lazy" />
        </div>
    </a>
</li>

<style>
    li {
        list-style: none;
    }
    .portfolio-card {
        position: relative;
        min-width: 20rem;
        aspect-ratio: 0.7/1;
        display: block;
        overflow: hidden;
        border-radius: 0.25rem;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .portfolio-card:hover {
        transform: scale(1.01);
        box-shadow: 0 6px 6px rgba(0, 0, 0, 0.05);
    }

    .portfolio-card-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: all 0.3s;
    }

    .portfolio-card-link {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: 0.75rem;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 0rem 1.5rem;
        box-sizing: border-box;
        background: var(--red-500);
        color: var(--white);
        transition: all 0.3s;
    }
    .portfolio-card:hover .portfolio-card-link {
        background: var(--red-800);
    }

    .portfolio-card-title {
        font-size: var(--title-xs);
        font-weight: 600;
    }

    .portfolio-card-arrow {
        width: clamp(1rem, 2vw, 1.25rem);
        height: auto;
    }
</style>